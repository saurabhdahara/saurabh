MainActivity.java

package com.example.emicalculator;

import androidx.appcompat.app.AppCompatActivity;
import android.view.View;
import android.widget.EditText;
import android.widget.TextView;
import android.os.Bundle;
import android.widget.Toast;

public class MainActivity extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);
    }
    double principal = 0;
    double rateOfInterest = 0;
    double numberOfMonths = 0;
    double emi = 0.0;

    public void displayEmi (String x){
        TextView emiTextView = (TextView) findViewById(R.id.emi);
        emiTextView.setText(x);
    }

    public void calculate(View view)
    {
        EditText principal = (EditText) findViewById(R.id.principal);
        EditText rate = (EditText) findViewById(R.id.rate);
        EditText years = (EditText) findViewById(R.id.years);
        double p = Double.parseDouble(principal.getText().toString());
        double r = Double.parseDouble(rate.getText().toString())/(12*100);
        double n = Double.parseDouble(years.getText().toString())*12;
        Toast.makeText(this, p+"\n"+n+"\n"+r, Toast.LENGTH_SHORT).show();
        double e =(double)((p*r*Math.pow(1+r,n))/(Math.pow(1+r,n)-1));

        double inte = (double)((e*12)+p);
        TextView emi = (TextView) findViewById(R.id.emi);
        emi.setText("EMI/Month = Rs. "+e);

    }
}


3. A3

package MCC_Codes;
import java.io.*;
public class a3
{
    public static void main(String[] args)throws IOException
    {
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        System.out.print("Enter User Key: ");
        String ki = br.readLine();
        String random = getRandom();
        String SRES = a3Algorithm(ki, random);
        System.out.print("Enter User Key To Authenticate: ");
        String key = br.readLine();
        String RES = a3Algorithm(key, random);
        if(SRES.equalsIgnoreCase(RES))
        {
            System.out.println("User Authenticated");
        }
        else
        {
            System.out.println("Scam User");
        }
    }

    public static String a3Algorithm(String ki, String random)throws IOException
    {
        String randomLeft = random.substring(0, 64);
        String randomRight = random.substring(64);
        String kiLeft = ki.substring(0, 64);
        String kiRight = ki.substring(64);
        String LHSXoRed = reduce(randomLeft, kiRight);
        String RHSXoRed = reduce(randomRight, kiLeft);
        String XoRed = reduce(LHSXoRed, RHSXoRed);
        String LHS = XoRed.substring(0, 32);
        String RHS = XoRed.substring(32);
        return reduce(LHS, RHS);
    }

    public static String getRandom()throws IOException
    {
        String str = "";
        for(int i = 0; i < 128; i++)
        {
            double temp = Math.random();
            if(temp >= 0.5)
            {
                str += "1";
            }
            else
            {
                str += "0";
            }
        }
        return str;
    }

    public static String XOR(String a, String b)throws IOException
    {
        if(a.equalsIgnoreCase(b))
        {
            return "0";
        }
        else
        {
            return "1";
        }
    }

    public static String reduce(String a, String b)throws IOException
    {
        String str = "";
        for(int i = 0; i < a.length(); i++)
        {
            str += XOR(a.substring(i, i+1), b.substring(i, i+1));
        }
        return str;
    }
}

4. A5

package MCC_Codes;

import java.io.*;
public class a5
{
    public static void main(String[] args)throws IOException
    {
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        System.out.print("Enter User Key: ");
        String ki = br.readLine();
        System.out.print("Enter Length of KeyStream: ");
        int len = Integer.parseInt(br.readLine());
        String keystream = a5Algorithm(ki, len);
        System.out.println(keystream);
        System.out.print("Enter User Key To Authenticate: ");
        String key = br.readLine();
        System.out.println(a5Algorithm(key, len));
        if(a5Algorithm(ki, len).equalsIgnoreCase(a5Algorithm(key, len)))
        {
            System.out.println("User Authenticated");
        }
        else
        {
            System.out.println("Scam User");
        }
    }

    public static String a5Algorithm(String ki, int len)throws IOException
    {
        String X = ki.substring(0, 19);
        String Y = ki.substring(19, 41);
        String Z = ki.substring(41);
        String finalKey = "";
        for(int i = 0; i < len; i++)
        {
            char m = Major(X.charAt(8), Y.charAt(10), Z.charAt(10));
            String keystream = "";
            if(X.charAt(8) == m)
            {
                String XOR = "" + X.charAt(13) + X.charAt(16) + X.charAt(17) + X.charAt(18);
                String t = generateBit(XOR);
                X = shift(t, X);
                keystream += X.charAt(X.length()-1);
            }
            if(Y.charAt(10) == m)
            {
                String XOR = "" + Y.charAt(20) + Y.charAt(21);
                String t = generateBit(XOR);
                Y = shift(t, Y);
                keystream += Y.charAt(Y.length()-1);
            }
            if(Z.charAt(10) == m)
            {
                String XOR = ""+ Z.charAt(7) + Z.charAt(20) + Z.charAt(21) + Z.charAt(22);
                String t = generateBit(XOR);
                Z = shift(t, Z);
                keystream += Z.charAt(Z.length()-1);
            }
            finalKey += generateBit(keystream);
        }
        return finalKey;
    }

    public static char Major(char a, char b, char c)throws IOException
    {
        if((a == '1' && b == '1') || (a == '1' && c == '1') || (b == '1' && c == '1'))
        {
            return '1';
        }
        else
        {
            return '0';
        }
    }
    public static String generateBit(String str)throws IOException
    {
        int one = 0;
        for(int i = 0; i < str.length(); i++)
        {
            if(str.charAt(i) == '1')
            {
                one++;
            }
        }
        if(one % 2 == 1)
        {
            return "1";
        }
        else
        {
            return "0";
        }
    }

    public static String shift(String t, String str)throws IOException
    {
        String newStr = "";
        for(int i = 1; i < str.length(); i++)
        {
            newStr += str.charAt(i-1);
        }
        newStr = t + newStr;
        return newStr;
    }
}

5. Android alert

In content_main.xml design view:
ADD: Linear Layout (Vertical)
Large Text (Rename to message)
Multiline text
button(rename to notify)

GO to textview of content_main.xml:
In the button label, add to the next line; android:onClick="notify"
Click inside "notify", click the light symbol -> Create notify of view

Insert one more blank activity -> name it ResultActivity

In MainActivity.java, add this:

public void notify(View view) {
    EditText E1=(EditText)findViewById(R.id.editText2); //editText2 is the id of the text box
    Intent intent=new Intent(this, ResultActivity.class);
            PendingIntent pending= PendingIntent.getActivity(this,0,intent,0);
    Notification noti=new Notification.Builder(this)
            .setContentTitle("New Message")
            .setContentText(E1.getText().toString()).setSmallIcon(R.mipmap.ic_launcher)
            .setContentIntent(pending).build();
    NotificationManager manager =(NotificationManager)getSystemService(NOTIFICATION_SERVICE);
    noti.flags |=Notification.FLAG_AUTO_CANCEL;
    manager.notify(0,noti);
}

