1. Form
package hello;

import javax.microedition.lcdui.ChoiceGroup;
import javax.microedition.lcdui.Command;
import javax.microedition.lcdui.CommandListener;
import javax.microedition.lcdui.Display;
import javax.microedition.lcdui.Displayable;
import javax.microedition.lcdui.Form;
import javax.microedition.lcdui.TextField;
import javax.microedition.midlet.*;

public class Forms extends MIDlet implements CommandListener {
    
    private Display display;
    private Form form, form1;
    private TextField name, email, contactNo, password;
    private Command signUp, cancel, back, exit;
    private ChoiceGroup choice, gender;
    
    
    public Forms() {          
        display = Display.getDisplay(this);
        form = new Form("Registration Form");
        form1 = new Form("Result");
        
        name = new TextField("Name","",30,TextField.ANY);
        email = new TextField("Email","",30,TextField.ANY);
        contactNo = new TextField("Contact No","",10,TextField.PHONENUMBER);
        password = new TextField("Password","",30,TextField.PASSWORD);
        cancel = new Command("Cancel",Command.CANCEL, 2);
        signUp = new Command("Sign Up", Command.OK, 2);
        back = new Command("Back", Command.CANCEL, 2);
        exit = new Command("Exit", Command.OK, 2);
        
        choice = new ChoiceGroup("List of Languages", ChoiceGroup.MULTIPLE);
        choice.append("C", null); 
        choice.append("Java", null);
        choice.append("Python", null);
        
        gender = new ChoiceGroup("List of Languages", ChoiceGroup.EXCLUSIVE);
        gender.append("Male", null);
        gender.append("Female", null);
        
        form.append(name);
        form.append(email);
        form.append(contactNo);
        form.append(password);
        form.append(gender);
        form.append(choice);
        form.addCommand(cancel);
        form.addCommand(signUp);
        
        form1.addCommand(back);
        form1.addCommand(exit);
        
        form.setCommandListener(this);
        form1.setCommandListener(this);

    }

    public void startApp() {
        display.setCurrent(form);
    }
    
    public void pauseApp() {
    }
    
    public void destroyApp(boolean unconditional) {
        notifyDestroyed();
    }

    public void commandAction(Command c, Displayable d) {
        if(c==signUp) {
            String inputName = "Name: "+name.getString()+"\n";
            String inputEmail = "Email: "+email.getString()+"\n";
            String inputContact = "Contact No: "+contactNo.getString()+"\n";
            String inputGender = "Gender: "+gender.getString(gender.getSelectedIndex())+"\n";
            boolean[] flags = new boolean[choice.size()];
            choice.getSelectedFlags(flags);
            String inputLanguages = "Languages: ";
            for(int i=0; i<flags.length; i++) {
                if(flags[i]) {
                    inputLanguages = inputLanguages+choice.getString(i)+", ";
                }
            }        
            form1.append(inputName+inputEmail+inputContact+inputLanguages);
            display.setCurrent(form1);
            
        }
        if(c==cancel) {
            destroyApp(true);
        }
        if(c==back) {
            display.setCurrent(form);
        }
        if(c==exit) {
            destroyApp(true);
        }
    }
}


