*Pyramid*/

package hello;

import javax.microedition.lcdui.*;
import javax.microedition.midlet.*;

public class pyramid extends MIDlet {
  public void startApp () {
  Display.getDisplay (this).setCurrent (new PCanvas ()); 
  }

  public void pauseApp () {}

  public void destroyApp (boolean forced) {}
}

class PCanvas extends Canvas {
  public void paint (Graphics g) {
  g.setColor (0, 0, 0);
  g.fillRect (0, 0, getWidth (), getHeight ());
  g.setColor (255, 255, 255);
  g.drawRect (50, 100, 100, 60);
  g.drawLine(50,100,100,25);
  g.drawLine(150,100,100,25);
  g.drawLine(50,160,100,25);
  g.drawLine(150,160,100,25);
  }
}






