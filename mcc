class CuboidCanvas extends Canvas {
  public void paint (Graphics g) {
  //g.setColor (255, 100, 0);
  g.fillRect (0, 0, getWidth (), getHeight ());
 
   g.setColor (10, 40, 255);
 // g.fillRect (20, 30, 200, 80);
  
  g.setColor (255, 255, 255);
  g.drawRect (20, 30, 150, 50);
  g.drawLine(20,30,40,50);
  g.drawLine(170,30,190,50);
  g.drawLine(20,80,40,100);
  g.drawLine(170,80,190,100);

  g.setColor (255, 255, 255);
  g.drawRect(40, 50, 150, 50);
  }
}





