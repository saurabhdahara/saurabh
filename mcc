b) FirstActivity: 

package com.example.programminglanguage;

import androidx.appcompat.app.AppCompatActivity;

import android.content.Context;
import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.CheckBox;
import android.widget.RadioGroup;
import android.widget.ScrollView;
import android.widget.Toast;

import com.google.android.material.textfield.TextInputEditText;
import com.google.android.material.textfield.TextInputLayout;

import java.util.ArrayList;

public class MainActivity extends AppCompatActivity {

    Context context;

    ScrollView svRegistrationForm;
    TextInputLayout tilName, tilEmail, tilContactNo, tilPassword, tilConfirmPassowrd;
    TextInputEditText tietName, tietEmail, tietContactNo, tietPassowrd, tietConfirmPassword;
    RadioGroup rgGender;
    CheckBox cbHindi, cbEnglish, cbBengali, cbMarathi, cbMalyalam, cbPunjabi;
    Button btnSignUp;

    String name, email, contactNo, password, confirmPassword, gender;
    ArrayList<String> languages = new ArrayList<>();

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        context = MainActivity.this;

        svRegistrationForm = findViewById(R.id.sv_registration_form);
        tilName = findViewById(R.id.til_name);
        tilEmail = findViewById(R.id.til_email);
        tilContactNo = findViewById(R.id.til_contact_no);
        tilPassword = findViewById(R.id.til_password);
        tilConfirmPassowrd = findViewById(R.id.til_confirm_password);
        tietName = findViewById(R.id.tiet_name);
        tietEmail = findViewById(R.id.tiet_email);
        tietContactNo = findViewById(R.id.tiet_contact_no);
        tietPassowrd = findViewById(R.id.tiet_password);
        tietConfirmPassword = findViewById(R.id.tiet_confirm_password);
        rgGender = findViewById(R.id.rg_gender);
        cbHindi = findViewById(R.id.cb_hindi);
        cbEnglish = findViewById(R.id.cb_english);
        cbBengali = findViewById(R.id.cb_bengali);
        cbMarathi = findViewById(R.id.cb_marathi);
        cbMalyalam = findViewById(R.id.cb_malyalam);
        cbPunjabi = findViewById(R.id.cb_punjabi);
        btnSignUp = findViewById(R.id.btn_sign_up);

        rgGender.setOnCheckedChangeListener(new RadioGroup.OnCheckedChangeListener() {
            @Override
            public void onCheckedChanged(RadioGroup group, int checkedId) {
                if(checkedId == R.id.rb_male) {
                    gender = "Male";
                } else {
                    gender = "Female";
                }
            }
        });

        cbHindi.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                if(cbHindi.isChecked()) {
                    languages.add("Hindi");
                } else {
                    languages.remove("Hindi");
                }
            }
        });

        cbEnglish.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                if(cbEnglish.isChecked()) {
                    languages.add("English");
                } else {
                    languages.remove("English");
                }
            }
        });

        cbBengali.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                if(cbBengali.isChecked()) {
                    languages.add("Bengali");
                } else {
                    languages.remove("Bengali");
                }
            }
        });

        cbMarathi.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                if(cbMarathi.isChecked()) {
                    languages.add("Marathi");
                } else {
                    languages.remove("Marathi");
                }
            }
        });

        cbMalyalam.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                if(cbMalyalam.isChecked()) {
                    languages.add("Malyalam");
                } else {
                    languages.remove("Malyalam");
                }
            }
        });

        cbPunjabi.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                if(cbPunjabi.isChecked()) {
                    languages.add("Punjabi");
                } else {
                    languages.remove("Punjabi");
                }
            }
        });

        btnSignUp.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                if(validateForm()) {
                    name = tietName.getText().toString();
                    email = tietEmail.getText().toString();
                    contactNo = tietContactNo.getText().toString();
                    password = tietPassowrd.getText().toString();
                    confirmPassword = tietConfirmPassword.getText().toString();

                    Intent intent = new Intent(context, Main2Activity.class);
                    intent.putExtra("name", name);
                    intent.putExtra("email", email);
                    intent.putExtra("contact", contactNo);
                    intent.putExtra("gender", gender);
                    intent.putExtra("languages", languages);
                    startActivity(intent);
                }
            }
        });
    }


    public boolean validateForm() {
        if(tietName.getText().toString().isEmpty()) {
            tilName.setError("Enter Name");
            focusOnView(tilName);
            return false;
        } else if(tietEmail.getText().toString().isEmpty()) {
            tilEmail.setError("Enter Email");
            focusOnView(tilEmail);
            return false;
        } else if(tietContactNo.getText().toString().isEmpty()) {
            tilContactNo.setError("Enter Contact no");
            focusOnView(tilContactNo);
            return false;
        } else if(tietPassowrd.getText().toString().isEmpty()) {
            tilPassword.setError("Enter Password");
            focusOnView(tilPassword);
            return false;
        } else if(tietConfirmPassword.getText().toString().isEmpty()) {
            tilConfirmPassowrd.setError("Enter Confirm Password");
            focusOnView(tilConfirmPassowrd);
            return false;
        } else if(rgGender.getCheckedRadioButtonId() == -1) {
            Toast.makeText(context, "Select Gender", Toast.LENGTH_SHORT).show();
            focusOnView(rgGender);
            return false;
        } else {
            return true;
        }
    }

    public void focusOnView(final View view) {
        svRegistrationForm.post(new Runnable() {
            @Override
            public void run() {
                svRegistrationForm.smoothScrollTo(0, view.getTop()-50);
            }
        });
    }

}


