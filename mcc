package hello;

import javax.microedition.lcdui.*;
import javax.microedition.midlet.*;

public class Cube extends MIDlet {
  public void startApp () {
  Display.getDisplay (this).setCurrent (new DemoCanvas ()); 
  }

  public void pauseApp () {}

  public void destroyApp (boolean forced) {}
}

class DemoCanvas extends Canvas {
  public void paint (Graphics g) {
  g.setColor (255, 255, 255);
  g.fillRect (0, 0, getWidth (), getHeight ());
  
  g.setColor (10, 40, 255);
  g.drawRect (20, 30, 50, 50);
  g.drawLine(20,30,40,50);
  g.drawLine(70,30,90,50);
  g.drawLine(20,80,40,100);
  g.drawLine(70,80,90,100);


  g.setColor (10,40,255);
  g.drawRect(40, 50, 50, 50);
  }
}


















